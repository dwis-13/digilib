    }

    h2 {
      margin-bottom: 20px;
    }

    .table-container {
      overflow-x: auto;
      display: inline-block;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    table {
      border-collapse: collapse;
      min-width: 500px;
      width: 100%;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 12px;
      text-align: center;
